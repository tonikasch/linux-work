/dts-v1/;
/include/ "sun4i-a10.dtsi"

/ {
	model = "PineRiver Mini X-Plus";
	compatible = "pineriver,mini-xplus", "allwinner,sun4i-a10";

	chosen {
		bootargs = "earlyprintk console=ttyS0,115200";
	};

	soc@01c00000 {
		mmc0: mmc@01c0f000 {
			pinctrl-names = "default";
			pinctrl-0 = <&mmc0_pins_a>;
			pinctrl-1 = <&mmc0_cd_pin_mini_xplus>;
			cd-gpios = <&pio 7 1 0>; /* PH1 */
			cd-mode = <1>;
			status = "okay";
		};

		usbphy: phy@0x01c13400 {
			usb1_vbus-supply = <&reg_usb1_vbus>;
			usb2_vbus-supply = <&reg_usb2_vbus>;
			status = "okay";
		};

		ehci0: ehci@0x01c14000 {
			status = "okay";
		};

		ohci0: ohci@0x01c14400 {
			status = "okay";
		};

		ehci1: ehci@0x01c1c000 {
			status = "okay";
		};

		ohci1: ohci@0x01c1c400 {
			status = "okay";
		};

		pinctrl@01c20800 {
			mmc0_cd_pin_mini_xplus: mmc0_cd_pin@0 {
				allwinner,pins = "PH1";
				allwinner,function = "gpio_in";
				allwinner,drive = <0>;
				allwinner,pull = <0>;
			};

			usb1_vbus_pin_mini_xplus: usb1_vbus_pin@0 {
					allwinner,pins = "PH6";
					allwinner,function = "gpio_out";
					allwinner,drive = <0>;
					allwinner,pull = <0>;
			};

			usb2_vbus_pin_mini_xplus: usb2_vbus_pin@0 {
					allwinner,pins = "PH3";
					allwinner,function = "gpio_out";
					allwinner,drive = <0>;
					allwinner,pull = <0>;
			};
		};

		uart0: serial@01c28000 {
			pinctrl-names = "default";
			pinctrl-0 = <&uart0_pins_a>;
			status = "okay";
		};
	};

	regulators {
		compatible = "simple-bus";
		pinctrl-names = "default";

		reg_usb1_vbus: usb1-vbus {
			compatible = "regulator-fixed";
			pinctrl-names = "default";
			pinctrl-0 = <&usb1_vbus_pin_mini_xplus>;
			regulator-name = "usb1-vbus";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			enable-active-high;
			gpio = <&pio 7 6 0>;
		};

		reg_usb2_vbus: usb2-vbus {
			compatible = "regulator-fixed";
			pinctrl-names = "default";
			pinctrl-0 = <&usb2_vbus_pin_mini_xplus>;
			regulator-name = "usb2-vbus";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			enable-active-high;
			gpio = <&pio 7 3 0>;
		};
	};
};
